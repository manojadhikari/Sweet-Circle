<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <h1 class="display-3">New Post</h1>
    <p class="secret-text">Create Posts and Connect with others!</p>

    <form action="/submit" method="POST">

      <div class="card">
        <div class="card-body">
          <h2> Create New Account</h2>
          <form action="/register" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="Manoj">
              </div>
              <div class="form-group col-md-6">
                <label for="Last Name">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Adhikari">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Password</label>
                <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity" placeholder="San Francisco">
              </div>
              <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                  <option selected>CA</option>
                  <option>...</option>
                </select>
              </div>
              <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip" placeholder="94115">
              </div>
            </div>
            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                  Use my Current Location
                </label>
              </div>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>




      <div class="form-group">
        <input type="text" class="form-control text-center" name="title" placeholder="What's your post about?">
        <input type="text" class="form-control text-center" name="description" placeholder="Please describe your post.">
        <input type="text" class="form-control text-center" name="type" placeholder="What type of post is this?">
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
<%- include('partials/footer') %>
