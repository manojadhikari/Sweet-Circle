<%- include('partials/header') %>

<div class="jumbotron main-display">
  <div class="container">
    <i class="fas fa-hands-helping fa-6x"></i>
    <h1 class="display-3">Learn Together</h1>
    <p class="lead">Extending Collaboration Beyond Classrooms!</p>

    <div class="container mt-5">
      <!-- <h1>Login</h1> -->

      <div class="row">
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">

              <!-- Makes POST request to /login route -->
              <form action="/login" method="POST">
                <h6> Already have an Account? <h6>
                <div class="form-group">
                  <!-- <label for="email"><strong>Email</strong></label> -->
                  <input type="email" class="form-control" name="username" placeholder="Email">
                </div>
                <div class="form-group">
                  <!-- <label for="password"><strong>Password</strong></label> -->
                  <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-success">Login</button>
              </form>

            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-body">
                    <a class="btn btn-block btn-google" href="/auth/google" role="button">
                      <i class="fab fa-google"></i>
                      Sign In with Google
                    </a>
                  </div>
                  <div class="card-body">
                    <a class="btn btn-block btn-dropbox" href="/auth/facebook" role="button">
                      <i class="fab fa-facebook"></i>
                      Sign In with Facebook
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-8">
          <div class="card">
            <div class="card-body">
              <form action="/register" method="POST">
                <h6> Create a New Account! </h6>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" id="firstName" placeholder="Manoj">
                    </div>
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" id="lastName" placeholder="Adhikari">
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <!-- <label for="email">Email</label> -->
                      <input type="email" class="form-control" name="username" placeholder="Email">
                    </div>
                    <div class="form-group col-md-6">
                      <!-- <label for="password">Password</label> -->
                      <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <input type="text" class="form-control" id="inputCity" placeholder="San Francisco">
                    </div>
                    <div class="form-group col-md-4">
                      <select id="inputState" class="form-control">
                        <option selected>CA</option>
                        <option>...</option>
                      </select>
                    </div>
                    <div class="form-group col-md-2">
                      <input type="text" class="form-control" id="inputZip" placeholder="94115">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="gridCheck">
                      <label class="form-check-label" for="gridCheck">
                        Use my Current Location
                      </label>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-dark">Register</button>
              </form>
            </div>
            </div>
          </div>
        </div>

      </div>
    </div>

    <hr>
    <!-- <div class="card">

    </div> -->

    </div>
    </div>

    <%- include('partials/footer') %>
